<!DOCTYPE html>
<html>
  <head>
    <title>Anonim Sohbet</title>
    <style>
      body {
        background-color: #000000;
        color: #00ff00;
        font-family: "Courier New", Courier, monospace;
      }
      h1 {
        text-align: center;
      }
      #chat {
        border: 1px solid #00ff00;
        border-radius: 5px;
        margin: 10px auto;
        max-width: 600px;
        padding: 10px;
      }
      input[type="text"], input[type="password"], textarea {
        background-color: #111111;
        border: 1px solid #00ff00;
        color: #00ff00;
        padding: 10px;
        width: 100%;
      }
      input[type="submit"] {
        background-color: #00ff00;
        border: none;
        color: #000000;
        padding: 10px;
        margin-top: 10px;
        cursor: pointer;
      }
    </style>
  </head>
  <body>
    <h1>Anonim Sohbet</h1>
    <div id="chat"></div>
    <form onsubmit="return false;">
      <input type="text" id="message" placeholder="Mesajınızı yazın...">
      <input type="submit" value="Gönder" onclick="sendMessage()">
    </form>
    <script>
      function sendMessage() {
        var message = document.getElementById("message").value;
        var chat = document.getElementById("chat");
        var date = new Date();
        var time = date.toLocaleTimeString();
        var newMessage = "<p>" + time + " - " + message + "</p>";
        chat.innerHTML += newMessage;
        document.getElementById("message").value = "";
      }
    </script>
  </body>
</html>
